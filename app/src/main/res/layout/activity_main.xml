    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#77BDBF"
        android:layout_weight="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="left"
            android:layout_marginTop="5px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/score_ply1"
            android:id="@+id/left_btn_ply1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="score: 0"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/left_btn_ply1"
            app:layout_constraintBottom_toTopOf="@+id/right_btn_ply1"
            android:id="@+id/score_ply1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="right"
            app:layout_constraintTop_toBottomOf="@+id/score_ply1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/right_btn_ply1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="left"
            android:layout_marginTop="5px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/score_ply2"
            android:id="@+id/left_btn_ply2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="score: 0"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/left_btn_ply2"
            app:layout_constraintBottom_toTopOf="@+id/right_btn_ply2"
            android:id="@+id/score_ply2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="right"
            app:layout_constraintTop_toBottomOf="@+id/score_ply2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/right_btn_ply2"/>


    </androidx.constraintlayout.widget.ConstraintLayout>








           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:id="@+id/board"

               android:layout_weight="7"
               android:layout_height="0dp">


            <com.example.pong.HexagonMaskView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/ball"
                android:layout_width="26dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ball"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
         </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#77BDBF"
        android:layout_weight="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/score_ply3"
            android:id="@+id/left_btn_ply3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="score: 0"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/left_btn_ply3"
            app:layout_constraintBottom_toTopOf="@+id/right_btn_ply3"
            android:id="@+id/score_ply3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="right"
            app:layout_constraintTop_toBottomOf="@+id/score_ply3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/right_btn_ply3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>